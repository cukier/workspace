#include<stdio.h>
#include<stdbool.h>

#define maxSetores 6

bool mudouAngulo(int *angulo, int *anguloAux) {
	int i = 0;
	bool ret = false;

	for (i = 0; i < maxSetores; ++i)
		ret |= angulo[i] != anguloAux[i];

	return ret;
}

int main(int argc, char **argv) {

	int nrSetores = 0;
	int nrSetoresAux = 0;

	int angulo[maxSetores];
	int anguloAux[maxSetores];

	nrSetores = 3;

	angulo[0] = 10;
	angulo[1] = 20;
	angulo[2] = 40;
	angulo[3] = 50;
	angulo[4] = 60;
	angulo[5] = 80;

	if (nrSetores != nrSetoresAux) {
		nrSetoresAux = nrSetores;
		printf("%d\n", nrSetores);
	}

	if (mudouAngulo(angulo, anguloAux)) {
		int i;
		for (i = 0; i < maxSetores; ++i) {
			anguloAux[i] = angulo[i];
			printf("[%d] ", angulo[i]);
		}
		printf("\n");
	}

	angulo[5] = 80;

	if (mudouAngulo(angulo, anguloAux)) {
		int i;
		for (i = 0; i < maxSetores; ++i) {
			anguloAux[i] = angulo[i];
			printf("[%d] ", angulo[i]);
		}
		printf("\n");
	}

	return 0;

}

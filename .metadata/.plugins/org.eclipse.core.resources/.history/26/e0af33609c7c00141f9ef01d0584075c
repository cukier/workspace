#include <stdio.h>
#include <string.h>
#include <unistd.h>
#include <fcntl.h>
#include <errno.h>
#include <termios.h>
#include <stdlib.h>

int open_port(char *door) {
	int fd;

	fd = open(door, O_RDWR | O_NOCTTY | O_NDELAY);

	if (fd == -1) {
		fprintf(stderr, "Problemas ao abrir a porta \"%s\" : %s\n", door,
				strerror(errno));
		exit(-1);
	}

	return fd;
}

int set_port(int baud_rate, int fd) {
	struct termios options;
	speed_t speed;

	switch (baud_rate) {
	default:
	case 9600:
		speed = B9600;
		break;
	case 19200:
		speed = B19200;
		break;
	}

	tcgetattr(fd, &options);
	cfsetispeed(&options, speed);
	cfsetospeed(&options, speed);
	options.c_cflag |= (CLOCAL | CREAD);
	tcsetattr(fd, TCSANOW, &options);

	return 0;
}

int get_msg_size(char *msg) {
	int cont;
	for (cont = 0; *msg != '\0'; msg++, cont++)
		;

	return cont;
}

int main(int argc, char **argv) {

	int fd, n, s;
	struct termios options;
	char str[160];

	fd = open_port("/dev/ttyS0");

	set_port(9600, fd);

	strcpy(str, "\fHello");

	s = get_msg_size(str);

	printf("Tamanho da mensagem %d", (int) sizeof(str));

	n = write(fd, str, sizeof(str));

	printf("\nEnviados %d bytes", n);

	close(fd);

	return 0;

}
